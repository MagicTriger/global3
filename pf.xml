	<action name="bg_resize">
		set(layer[bg_img].width,calc:stagewidth);
		set(layer[bg_img].height,calc:stageheight);
	</action>

	<action name="start1" >
		<!-- shijian 时间修改位置 -->
		set(idletime,50);
		set(enterVrVideo,false);
		set(layer[container_obj].visible,false);
		plugin[video].play();
		set(hotspot[bg_enter].visible,false);
		setinterval(timec,1,time_action());
		removehotspot('vr_cursor');


		<!-- plugin[video].closevideo(); -->

 	</action>

 	<action name="time_action">
 		set(a,get(plugin[video].time));
 		set(b,get(plugin[video].totaltime));
 		
 		roundval(a);
 		roundval(b);

 		if(a == 188,  //时间 秒
 			plugin[video].pause();
			set(hotspot[bg_enter].visible,true);
      		set(hotspot[vr_cursor].bgalpha,0);
			webvr_load_vr_cursor_hs();

 		);
      
       if(a == b,
			clearinterval(timec);
 		);
 	</action>

	<action name="qiehuanVR_video_time">
		if(enterVrVideo == true,
			start();
		);
	</action>
		<!-- set(plugin[videospot].onclick,'qiehuanVR_video();'); -->

	<action name="qiehuanVR_video">
		set(enterVrVideo,true);
		loadscene(get(vrshipin_id));
		
		removeplugin(videospot);
	</action>
 



